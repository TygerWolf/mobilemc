<%= form_for(@track) do |f| %>

  <p>
    <%= f.label :title  %>
   <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :hook_bars %>
    <%= f.text_field :hook_bars %>
  </p>

  <p>
    <%= f.label :verse_bars %>
    <%= f.text_field :verse_bars %>
  </p>

  <p>
    <%= f.label :bpm %>
    <%= f.text_field :bpm %>
  </p>

  <div id="save">
    <%= f.submit "Save Track" %>
  </div>

<%end%>

<div id="track">
  <%=render :partial => 'tracks' %>
</div>